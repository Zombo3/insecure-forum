  {{#if message}} <p class="message">{{message}}</p> {{/if}}

  <form method="POST" action="/forgot-password">
    <label>
      Email
      <input type="email" name="email" required />
    </label>

    <button type="submit">Send reset link</button>
  </form>

  <p style="opacity:0.8; margin-top:10px;">
